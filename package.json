{
  "name": "composifx",
  "version": "0.1.0",
  "private": true,
  "description": "A TypeScript/JavaScript library for scripted compositing, animation, and motion graphics in the browser",
  "keywords": [
    "motion-graphics",
    "animation",
    "compositing",
    "webgl",
    "canvas",
    "after-effects",
    "vfx"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' build",
    "dev": "pnpm -r --parallel --filter='./packages/*' dev",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
